<h1>Welcome to Contactually</h1>

<h1>Import Contacts</h1>

<%= form_tag upload_contacts_path, multipart: true do %>
  <%= file_field_tag :upload %>
  <%= submit_tag "Upload" %>
<% end %>


<h1>Your Contacts</h1>
<div>Filters</div>
<div id="international" class="unselected">International #s</div>
<div id="extension" class="unselected">#s w/ Extension</div>
<div id="email_com" class="unselected">Emails w/ .com</div>
<div>Sort By</div>
<div id="sort_first_name" class="unselected">First Name</div>
<div id="sort_last_name" class="unselected">Last Name</div>
<div id="sort_email" class="unselected">Email</div>

<% if @contacts.length == 0 %>
  <h1>No Contacts Yet! Upload Some!</h1>
<% else %>
  <% @contacts.each do |contact| %>
    <div class="contact_row">
      <div class="delete"><i class="fa fa-trash-o"></i></div>
      <div class="contact_id" style="display:none"><%=contact.id%></div>
      <div class="first_name"><%=contact.first_name%></div>
      <div class="last_name"><%=contact.last_name%></div>
      <div class="email"><%=contact.email_address%></div>
      <div class="phone_number"><%=contact.phone_number%></div>
      <div class="company_name"><%=contact.company_name%></div>
    </div>
  <% end %>
<% end %>
